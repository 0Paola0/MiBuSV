<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="#586875"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:layout_alignParentTop="true">

        <ImageView
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:src="@drawable/mibusv" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MiBUSV"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:fontFamily="@font/arialnarrow_bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Registro de Conductor"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="@font/arialnarrow_bold" />
        </LinearLayout>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/perfilusuario"
            android:layout_gravity="end|center" />
    </LinearLayout>

    <!-- Contenido principal -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header"
        android:layout_above="@id/footer"
        android:padding="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Título -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Registrar Nuevo Conductor"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:fontFamily="@font/arialnarrow_bold"
                android:layout_marginBottom="24dp" />

            <!-- Formulario -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Nombre del Conductor -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nombre del Conductor"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:fontFamily="@font/arialnarrow_bold"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/etNombreConductor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Ingrese el nombre completo del conductor"
                    android:background="@drawable/edittext_background"
                    android:padding="12dp"
                    android:textSize="14sp"
                    android:fontFamily="@font/arialnarrow"
                    android:layout_marginBottom="16dp" />

                <!-- Email -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Correo Electrónico"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:fontFamily="@font/arialnarrow_bold"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/etEmailConductor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="conductor@gmail.com"
                    android:inputType="textEmailAddress"
                    android:background="@drawable/edittext_background"
                    android:padding="12dp"
                    android:textSize="14sp"
                    android:fontFamily="@font/arialnarrow"
                    android:layout_marginBottom="16dp" />

                <!-- Teléfono -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Teléfono"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:fontFamily="@font/arialnarrow_bold"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/etTelefonoConductor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="2234-5678"
                    android:inputType="phone"
                    android:background="@drawable/edittext_background"
                    android:padding="12dp"
                    android:textSize="14sp"
                    android:fontFamily="@font/arialnarrow"
                    android:layout_marginBottom="16dp" />

                <!-- Rutas Asignadas -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rutas Asignadas"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:fontFamily="@font/arialnarrow_bold"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/etRutasConductor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Buscar rutas disponibles..."
                    android:background="@drawable/edittext_background"
                    android:padding="12dp"
                    android:textSize="14sp"
                    android:fontFamily="@font/arialnarrow"
                    android:layout_marginBottom="8dp" />

                <!-- Lista de rutas disponibles -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvRutasDisponibles"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:background="@drawable/edittext_background"
                    android:padding="8dp"
                    android:layout_marginBottom="8dp"
                    android:visibility="gone" />

                <!-- Texto mostrando rutas seleccionadas -->
                <TextView
                    android:id="@+id/tvRutasSeleccionadas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rutas seleccionadas: Ninguna"
                    android:textSize="14sp"
                    android:textColor="#6B7280"
                    android:fontFamily="@font/arialnarrow"
                    android:layout_marginBottom="24dp"
                    android:background="@drawable/bg_user_card"
                    android:padding="8dp" />

                <!-- Botones -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <Button
                        android:id="@+id/btnCancelarConductor"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:text="Cancelar"
                        android:textSize="14sp"
                        android:textColor="#444444"
                        android:fontFamily="@font/arialnarrow_bold"
                        android:background="@drawable/button_salir" />

                    <Button
                        android:id="@+id/btnRegistrarConductor"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:text="Registrar Conductor"
                        android:textSize="14sp"
                        android:textColor="#FFFFFF"
                        android:fontFamily="@font/arialnarrow_bold"
                        android:background="@drawable/button_agregarusuario" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!-- Footer -->
    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="#586875"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="©2025 MiBUSV"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:fontFamily="@font/arialnarrow_bold" />
    </LinearLayout>

</RelativeLayout>