<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardBackgroundColor="@android:color/transparent"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_user_card"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <View
                android:id="@+id/leftStatusDot"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:background="@drawable/user_status_dot_active" />

            <TextView
                android:id="@+id/tvName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:text="Nombre"
                android:textColor="#000000"
                android:textSize="20sp"
                android:fontFamily="@font/arialnarrow_bold" />

            <View
                android:id="@+id/rightStatusDot"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/user_status_dot_active" />

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Activo"
                android:textColor="#6B7280"
                android:textSize="16sp"
                android:fontFamily="@font/arialnarrow_bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <TextView
                android:id="@+id/tvEmailLabelUsers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Correo:"
                android:textColor="#6B7280"
                android:textSize="16sp"
                android:fontFamily="@font/arialnarrow_bold" />

            <TextView
                android:id="@+id/tvEmailUsers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="nombre@gmail.com"
                android:textColor="#6B7280"
                android:textSize="16sp"
                android:fontFamily="@font/arialnarrow"
                android:layout_marginStart="4dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <TextView
                android:id="@+id/tvTelefonoUsersLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TelÃ©fono:"
                android:textColor="#6B7280"
                android:textSize="16sp"
                android:fontFamily="@font/arialnarrow_bold" />

            <TextView
                android:id="@+id/tvTelefonoUsers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7786-7908"
                android:textColor="#6B7280"
                android:textSize="16sp"
                android:fontFamily="@font/arialnarrow"
                android:layout_marginStart="4dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <TextView
                android:id="@+id/tvfechaRegistroLabelUsers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fecha de registro:"
                android:textColor="#6B7280"
                android:textSize="16sp"
                android:fontFamily="@font/arialnarrow_bold" />

            <TextView
                android:id="@+id/tvfechaRegistroUsers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2025-11-12"
                android:textColor="#6B7280"
                android:textSize="16sp"
                android:fontFamily="@font/arialnarrow"
                android:layout_marginStart="4dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <TextView
                android:id="@+id/tvRoleLabelUsers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rol:"
                android:textColor="#6B7280"
                android:textSize="16sp"
                android:fontFamily="@font/arialnarrow_bold" />

            <TextView
                android:id="@+id/tvRoleUsers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pasajero"
                android:textColor="#6B7280"
                android:textSize="16sp"
                android:fontFamily="@font/arialnarrow"
                android:layout_marginStart="4dp" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>


