<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardBackgroundColor="@android:color/transparent"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_user_card"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <View
                android:id="@+id/leftStatusDot"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:background="@drawable/user_status_dot_active" />

            <TextView
                android:id="@+id/tvConductorName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:text="Nombre conductor"
                android:textColor="#000000"
                android:textSize="20sp"
                android:fontFamily="@font/arialnarrow_bold" />

            <View
                android:id="@+id/rightStatusDot"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/user_status_dot_active" />

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Activo"
                android:textColor="#6B7280"
                android:textSize="16sp"
                android:fontFamily="@font/arialnarrow_bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <TextView
                android:id="@+id/tvEmailLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email:"
                android:textColor="#6B7280"
                android:textSize="16sp"
                android:fontFamily="@font/arialnarrow_bold" />

            <TextView
                android:id="@+id/tvEmailValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="conductor@gmail.com"
                android:textColor="#6B7280"
                android:textSize="16sp"
                android:fontFamily="@font/arialnarrow"
                android:layout_marginStart="4dp" />
        </LinearLayout>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <TextView
                android:id="@+id/tvTelefonoLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TelÃ©fono:"
                android:textColor="#6B7280"
                android:textSize="16sp"
                android:fontFamily="@font/arialnarrow_bold" />

            <TextView
                android:id="@+id/tvTelefono"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7786-7890"
                android:textColor="#6B7280"
                android:textSize="16sp"
                android:fontFamily="@font/arialnarrow"
                android:layout_marginStart="4dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <TextView
                android:id="@+id/tvRutasLabel2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rutas:"
                android:textColor="#6B7280"
                android:textSize="16sp"
                android:fontFamily="@font/arialnarrow_bold" />

            <TextView
                android:id="@+id/tvRutasLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="113"
                android:textColor="#6B7280"
                android:textSize="16sp"
                android:fontFamily="@font/arialnarrow"
                android:layout_marginStart="4dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <TextView
                android:id="@+id/tvRegistroLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fecha de registro:"
                android:textColor="#6B7280"
                android:textSize="16sp"
                android:fontFamily="@font/arialnarrow_bold" />

            <TextView
                android:id="@+id/tvRegistro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2025-10-12"
                android:textColor="#6B7280"
                android:textSize="16sp"
                android:fontFamily="@font/arialnarrow"
                android:layout_marginStart="4dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <TextView
                android:id="@+id/tvRoleLabelConductor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rol:"
                android:textColor="#6B7280"
                android:textSize="16sp"
                android:fontFamily="@font/arialnarrow_bold" />

            <TextView
                android:id="@+id/tvRoleConductor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Conductor"
                android:textColor="#6B7280"
                android:textSize="16sp"
                android:fontFamily="@font/arialnarrow"
                android:layout_marginStart="4dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:gravity="center">

            <Button
                android:id="@+id/btnViewDetails"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="Ver Detalles"
                android:textColor="#000000"
                android:textSize="14sp"
                android:fontFamily="@font/arialnarrow_bold"
                android:background="@drawable/btn_view_details_bg" />

            <Button
                android:id="@+id/btnDelete"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="Eliminar"
                android:textColor="#EF4444"
                android:textSize="14sp"
                android:fontFamily="@font/arialnarrow_bold"
                android:background="@drawable/btn_delete_bg" />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>